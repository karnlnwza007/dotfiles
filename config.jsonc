{
  "layer": "bottom",
  "position": "top",
  "height": "13",
  "spacing": "3",
  "modules-left": [
    "hyprland/workspaces",
    /*"hyprland/submap"*/ "hyprland/window"
  ],
  "modules-center": ["clock"],
  "modules-right": [
    "idle_inhibitor",
    "network",
    "cpu",
    "memory",
    "battery",
    "pulseaudio",
    "tray"
  ],
  "hyprland/workspaces": {
    "visible": "all",
    "format": "{icon}",
    "style": {
      "workspace.focused": {
        "font-weight": "bold",
        "color": "#FFFFFF" // Replace with your desired color
      }
    }
  },
  "hyprland/submap": {
    "format": "{}"
